# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/mydb

# Authentication Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM Configuration (DeepInfra - OpenAI Compatible)
LLM_API_KEY=your-local-llm-key
LLM_BASE_URL=https://api.localllm.com/v1/openai
LLM_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Local LLM Configuration (if needed instead of API)
LLM_MODEL_PATH=/path/to/your/model.gguf
LLM_CONTEXT_SIZE=2048
LLM_GPU_LAYERS=-1
LLM_BATCH_SIZE=512

# Database Configuration
MAX_CONNECTIONS=20
VECTOR_DIMENSION=384
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Performance Configuration
WORKERS=4
TIMEOUT=300